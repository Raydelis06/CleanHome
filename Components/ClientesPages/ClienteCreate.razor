@using CleanHome.Models
@using CleanHome.Services
@inject ClienteService clienteService
@inject NavigationManager navegar
@page "/Clientes/Crear_Cliente"
@rendermode InteractiveServer

<PageTitle>Crear Cliente</PageTitle>
<EditForm Model="cliente" OnValidSubmit="Guardar">

	<DataAnnotationsValidator />

	<div class="container">
		<div class="card shadow-lg">
			<div class="card-header text-center">
				<h5 class="card-title">Crear Cliente</h5>
			</div>

			<div class="card-body ">

				@* Cedula *@
				<div class="mb-3">
					<label class="form-label"><strong>Cedula</strong></label>
					<InputText class="form-control" @bind-Value="cliente.Cedula	"></InputText>
					<ValidationMessage For="@(()=>cliente.Cedula)"></ValidationMessage>
				</div>
				@* Nombre *@
				<div class="mb-3">
					<label class="form-label"><strong>Nombre</strong></label>
					<InputText class="form-control" @bind-Value="cliente.Nombre"></InputText>
					<ValidationMessage For="@(() => cliente.Nombre)"></ValidationMessage>
				</div>
				@* Direccion *@
				<div class="mb-3">
					<label class="form-label"><strong>Direccion</strong></label>
					<InputText class="form-control" @bind-Value="cliente.Direccion"></InputText>
					<ValidationMessage For="@(() => cliente.Direccion)"></ValidationMessage>
				</div>
				@* Telefono *@
				<div class="mb-3">
					<label class="form-label"><strong>Telefono</strong></label>
					<InputText class="form-control" @bind-Value="cliente.Telefono"></InputText>
					<ValidationMessage For="@(() => cliente.Telefono)"></ValidationMessage>
				</div>

			</div>

			@*footer*@
			<div class="card-footer text-center mt-2">
				<a href="/asignaturas" class="btn btn-secondary"> <span class="bi bi-arrow-left"></span> Volver</a>
				<button type="submit" class="btn btn-primary bi bi-floppy">Guardar</button>
			</div>
		</div>
	</div>
</EditForm>

@code
{
	private Clientes cliente = new();

	private async Task Guardar()
	{
		var guardar = await clienteService.Guardar(cliente);
		if (guardar)
		{
			navegar.NavigateTo("/Clientes");
		}

	}

}